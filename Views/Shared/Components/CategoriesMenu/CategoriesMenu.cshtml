@model IEnumerable<LibrairieDTICRosemont.Models.Categorie>


 
@if (Model != null)
{

    <li class="dropdown mega-dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <span class="caret"></span></a>
        <ul class='dropdown-menu mega-dropdown-menu'>
            @{
                int nbLigne = 5;
                int i =0 ;

                foreach (var item in Model)
                {
                    String nomCat = item.Designation;
                    int idCat = item.CategorieId+ i + 1;

                    if (i % nbLigne == 0)
                    {
                        if (i != 0)
                        {
                            @:</ul></li>
                        }
                        @:<li><ul class='list-unstyled'>
                    }

                    <li><a href="~/Livres/Search2/@idCat">@nomCat</a></li>

                    if (i == Model.Count() - 1)
                    {
                        @:</ul></li>
                    }

                    i++;
                }
            }
        </ul>
    </li>
}
