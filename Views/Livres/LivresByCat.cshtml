@model IEnumerable<LibrairieDTICRosemont.Models.Categorie>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
@foreach (var item in Model)
{
    if (item.livres.Count != 0)
    {
        <h5><b>Les Livres de : @item.Designation</b></h5>
        <hr />
    }

    <div class="row" style="margin-top:15px;">
        @foreach (var SubItem in item.livres)
        {
            <div class="col-md-3 col-xs-1 " style="height:380px;">
                <div class="thumbnail text-center" style="padding-left:15px;padding-bottom:15px;">
                    <img src="~/img/ImgLivre/@SubItem.Photo" style="height:200px;width:200px;" />
                    <h5><b>Titre : </b>@Html.DisplayFor(model => SubItem.Titre)</h5>
                    <h5> <b>Prix : </b>@Html.DisplayFor(model => SubItem.Prix)</h5>
                    <p><b>Quantite Disponible : </b><span style="color:green;">@Html.DisplayFor(model => SubItem.Quantite)</span></p>
                    <a href="~/Livres/Details/@SubItem.LivreId" class="btn btn-default">Plus de details</a>
                </div>
            </div>
        }
    </div>
}
