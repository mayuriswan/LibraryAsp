@model IEnumerable<LibrairieDTICRosemont.Models.Livre>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<div class="row" style="margin-top:15px;">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-xs-1 " style="height:380px;">
            <div class="thumbnail text-center" style="padding-left:15px;padding-bottom:15px;">
                <img src="/@Html.DisplayFor(model => item.Photo)" style="height:200px;width:200px;" />
                <h5><b>Titre : </b>@Html.DisplayFor(model => item.Titre)</h5>
                <h5> <b>Prix : </b>@Html.DisplayFor(model => item.Prix)</h5>
                <p><b>Quantite Disponible : </b><span style="color:green;">@Html.DisplayFor(model => item.Quantite)</span></p>
                <a href="~/Livres/Details/@item.LivreId" class="btn btn-default">Plus de details</a>
            </div>
        </div>
    }
</div>

